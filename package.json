{
  "name": "my-webtoon-list-app",
  "version": "1.0.0",
  "description": "An app for keeping track of one's webtoons. Inspired by <https://myanimelist.net/>. Runs a Node + Mongoose server, and a React client app",
  "engines": {
    "node": "16.13.1",
    "npm": "8.3.0"
  },
  "main": "server/server.js",
  "scripts": {
    "start": "cd server && node server.js",
    "build": "cd client && npm install && npm run build",
    "engines": "16.13.1",
    "jest": "jest",
    "test": "mocha --recursive --exit",
    "test:watch": "npm run test -- --watch"
  },
  "jest": {
    "verbose": true
  },
  "proxy": "http://localhost:3001",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lunacodes/my-webtoon-list-app.git"
  },
  "homepage": "https://github.com/lunacodes/my-webtoon-list-app#readme",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.20.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^4.4.1",
    "mongoose": "^6.2.11",
    "passport": "^0.5.2",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^7.0.0",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^2.2.1",
    "chai": "^4.3.6",
    "jest": "^27.5.1",
    "mocha": "^9.2.2",
    "nodemon": "^2.0.15",
    "stylelint": "^14.6.1",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-standard-scss": "^3.0.0",
    "stylelint-order": "^5.0.0",
    "superagent": "^7.1.2",
    "supertest": "^6.2.2"
  }
}
